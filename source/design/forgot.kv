<ForgotPasswordScreen>:
    BoxLayout:
        id: main
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 35

            canvas.before:
                Color:
                    rgba: (.1, .1, .1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Atlas Terminal'
                font_size: 14
                bold: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                padding: self.size[0] / 3, 10
                spacing: 10
                height: 190

                Label:
                    text: 'Enviaremos um link para recuperação da senha'
                    font_size: 18
                    bold: True
                    color: (21 / 255, .15, 81 / 255, 1)

                TextInput:
                    hint_text: 'Email'
                    multiline: False

                Button:
                    text: 'Enviar'
                    bold: True
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''

                Button:
                    text: 'Voltar'
                    on_release: root.manager.current = 'login'
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''

        BoxLayout:
            id: temp

