<LinesScreen>:
    BoxLayout:
        id: main
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: 35

            canvas.before:
                Color:
                    rgba: (.1, .1, .1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Atlas Terminal"
                font_size: 14
                bold: True

        BoxLayout:
            id: temp
            size_hint_y: .3

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            id: lines
    
            Button:
                id: trigger
                text: 'Linhas'
                bold: True
                on_release: dropdown.open(self)
                height: 40
                size_hint: (.5, None)

                Widget:
                    on_parent: dropdown.dismiss()

                    DropDown:
                        id: dropdown
                        Button:
                            text: 'Marituba - UFPA [914]'
                            size_hint_y: None
                            on_press: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                        Button:
                            text: 'UFPA - Alcindo Cacela [308]'
                            size_hint_y: None
                            on_release: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                        Button:
                            text: 'UFPA - Cidade Nova 6 [321]'
                            size_hint_y: None
                            on_press: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                        Button:
                            text: 'Curuçambá - UFPA [999]'
                            size_hint_y: None
                            on_press: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                        Button:
                            text: 'Pratinha - UFPA [643]'
                            size_hint_y: None
                            on_press: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                        Button:
                            text: 'UFPA - Pedreira [306]'
                            size_hint_y: None
                            on_press: root.manager.current = 'system'
                            on_release: dropdown.dismiss()
                            height: 50

                BoxLayout:

                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    Button:
                        size_hint: 5, .4
                        text: 'Sair'
                        background_color: (21 / 255, .15, 81 / 255, 1)
                        background_normal: ''
                        on_release: root.manager.current = 'login'

