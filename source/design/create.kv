<CreateAccountScreen>:
    BoxLayout:
        id: main
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 35

            canvas.before:
                Color:
                    rgba: (.1, .1, .1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Atlas Terminal"
                font_size: 14
                bold: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                padding: self.size[0] / 3, 5

                orientation: 'vertical'
                spacing: 15
                height: 390

                Label:
                    id: info
                    text: ''
                    bold: True
                    font_size: 18
                    color: (21 / 255, .15, 81 / 255, 1)

                TextInput:
                    id: username
                    hint_text: 'Usu√°rio'
                    multiline: False
                    on_text_validate: email.focus = True
                
                TextInput:
                    id: email
                    hint_text: 'Email'
                    multiline: False
                    on_text_validate: password.focus = True

                TextInput:
                    id: password
                    hint_text: 'Senha'
                    multiline: False
                    password: True
                    on_text_validate: conf_password.focus = True

                TextInput:
                    id: conf_password
                    hint_text: 'Confirmar Senha'
                    multiline: False
                    password: True
                    on_text_validate: root.create_user()


                Button:
                    text: 'Criar Conta'
                    bold: True
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''
                    on_release: root.create_user()

                Button:
                    text: 'Voltar'
                    on_release: root.manager.current = 'login'
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''
                    on_release: info.text = ''
