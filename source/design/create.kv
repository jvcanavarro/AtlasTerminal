<CreateAccountScreen>:
    BoxLayout:
        id: main
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 35

            canvas.before:
                Color:
                    rgba: (.1, .1, .1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Atlas Terminal"
                font_size: 14
                bold: True

        BoxLayout:
            size_hint_y: None
            padding: self.size[0] / 3, 10
            spacing: 20
            height: 50

            TextInput:
                hint_text: 'Nome'

            TextInput:
                hint_text: 'Sobrenome'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            padding: self.size[0] / 3, 10
            spacing: 20
            height: 250

            TextInput:
                hint_text: 'Email'
                multiline: False

            TextInput:
                hint_text: 'Confirmar Email'
                multiline: False

            TextInput:
                hint_text: 'Senha'
                multiline: False
                password: True

            TextInput:
                hint_text: 'Confirmar Senha'
                multiline: False
                password: True

            Button:
                text: 'Criar Conta'
                on_release: root.manager.current = 'login'

        BoxLayout:
            id: temp
