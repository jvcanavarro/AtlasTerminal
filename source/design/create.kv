<CreateAccountScreen>:
    BoxLayout:
        id: main
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 35

            canvas.before:
                Color:
                    rgba: (.1, .1, .1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Atlas Terminal"
                font_size: 14
                bold: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                padding: self.size[0] / 3, 5

                orientation: 'vertical'
                spacing: 15
                height: 420

                TextInput:
                    hint_text: 'Nome'
                    multiline: False

                TextInput:
                    hint_text: 'Sobrenome'
                    multiline: False
                
                TextInput:
                    hint_text: 'Email'
                    multiline: False

                TextInput:
                    hint_text: 'Confirmar Email'
                    multiline: False

                TextInput:
                    hint_text: 'Senha'
                    multiline: False
                    password: True

                TextInput:
                    hint_text: 'Confirmar Senha'
                    multiline: False
                    password: True

                Button:
                    text: 'Criar Conta'
                    bold: True
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''
                    on_release: root.manager.current = 'login'

                Button:
                    text: 'Voltar'
                    on_release: root.manager.current = 'login'
                    background_color: (21 / 255, .15, 81 / 255, 1)
                    background_normal: ''
