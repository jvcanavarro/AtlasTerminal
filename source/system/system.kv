<FlatButton@ButtonBehavior+Label>:
    font_size: 14


<SystemWindow>:
    id: default
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40

        canvas.before:
            Color:
                rgba: (21 / 255, .15, 111 / 255, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            text: 'ATLAS'
            font_size: 18
            bold: True
            color: (1, 1, 1, 1)


    BoxLayout:
        id: current
        size_hint_y: None
        height: 50

        canvas.before:
            Color:
                rgba: (21 / 255, .15, 81 / 255, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: date
            text: 'Data'
            background_normal: ''
            background_color:  (21 / 255, .15, 81 / 255, 1)

        Label:
            id: current_turn
            text: 'Turno'
            background_normal: ''
            background_color:  (21 / 255, .15, 81 / 255, 1)
        
        Label
            id: current_order
            text: 'Linha'
            background_normal: ''
            background_color:  (21 / 255, .15, 81 / 255, 1)

    BoxLayout:
        padding: 4

        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: .8
            spacing: 5

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40

                canvas.before:
                    Color:
                        rgba: (21 / 255, .15, 81 / 255, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                FlatButton:
                    text: 'Empregado'
                    size_hint_x: .15

                FlatButton:
                    text: 'Função'
                    size_hint_x: .1

                FlatButton:
                    text: 'Entrada'
                    size_hint_x: .1

                FlatButton:
                    text: 'Saída'
                    size_hint_x: .1

                FlatButton:
                    text: 'Horas Extras'
                    size_hint_x: .1

                FlatButton:
                    text: 'Adicionais'
                    size_hint_x: .1


            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5

                TextInput:
                    id: qty_input
                    multiline: False
                    size_hint_x: .15

                TextInput:
                    id: code_input
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: root.awesome_function()

                TextInput:
                    id: disc_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: disc_perc_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: vat_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: price_input
                    multiline: False
                    size_hint_x: .1


            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5

                TextInput:
                    id: qty_input
                    multiline: False
                    size_hint_x: .15

                TextInput:
                    id: code_input
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: root.awesome_function()

                TextInput:
                    id: disc_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: disc_perc_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: vat_input
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: price_input
                    multiline: False
                    size_hint_x: .1


            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: None
                    height: 30

                    canvas.before:
                        Color:  
                            rgba: (21 / 255, .15, 81 / 255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    
                    Label:
                        text: 'Code'
                        size_hint_x: .2

                    Label:
                        text: 'Product Name'
                        size_hint_x: .3

                    Label:
                        text: 'Qty'
                        size_hint_x: .1

                    Label:
                        text: 'Disc'
                        size_hint_x: .1
                    
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                    
                    Label:
                        text: 'Product Total'
                        size_hint_x: .2

                GridLayout:
                    id: products
                    cols: 1

        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .20
            padding: 10

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'The Collector\n123 Main St\nKnowhere, Space\n\nTel: (555)-123-456\nReceipt No: \n\nDate: \n'
            
