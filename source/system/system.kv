<FlatButton@ButtonBehavior+Label>:
    font_size: 14


<SystemWindow>:
    id: default
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40

        canvas.before:
            Color:
                rgba: (.1, .1, .1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            text: 'ATLAS Terminal'
            font_size: 18
            bold: True
            color: (1, 1, 1, 1)


    BoxLayout:
        id: general_info
        size_hint_y: None
        height: 20

        canvas.before:
            Color:
                rgba: (.1, .1, .1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: date
            text: 'Data'

        Label:
            id: current_turn
            text: 'Turno'
        
        Label
            id: current_order
            text: 'Linha'

    BoxLayout:
        padding: 7
        spacing: 5

        BoxLayout:
            id: employees
            orientation: 'vertical'
            size_hint_x: .8
            spacing: 5

            BoxLayout:
                id: emp_labels
                size_hint_y: None
                height: 30

                canvas.before:
                    Color:
                        rgba: (21 / 255, .15, 81 / 255, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                FlatButton:
                    text: 'Empregado'
                    size_hint_x: .15

                FlatButton:
                    text: 'Função'
                    size_hint_x: .1

                FlatButton:
                    text: 'Entrada'
                    size_hint_x: .1

                FlatButton:
                    text: 'Saída'
                    size_hint_x: .1

                FlatButton:
                    text: 'Horas Extras'
                    size_hint_x: .1

                FlatButton:
                    text: 'Adicionais'
                    size_hint_x: .1


            BoxLayout:
                id: emp_input
                size_hint_y: None
                height: 30
                spacing: 5

                TextInput:
                    id: name
                    multiline: False
                    size_hint_x: .15

                TextInput:
                    id: function
                    size_hint_x: .1
                    multiline: False

                TextInput:
                    id: entry_time
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: exit_time
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: extra_hours
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: adds
                    multiline: False
                    size_hint_x: .1
                    on_text_validate: root.add_route()


            BoxLayout:
                id: emp_input
                size_hint_y: None
                height: 30
                spacing: 5

                TextInput:
                    id: name
                    multiline: False
                    size_hint_x: .15

                TextInput:
                    id: function
                    size_hint_x: .1
                    multiline: False

                TextInput:
                    id: entry_time
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: exit_time
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: extra_hours
                    multiline: False
                    size_hint_x: .1

                TextInput:
                    id: adds
                    multiline: False
                    size_hint_x: .1



            BoxLayout:
                orientation: 'vertical'
                id: travel_labels

                BoxLayout:
                    size_hint_y: None
                    height: 17

                    canvas.before:
                        Color:  
                            rgba: (21 / 255, .15, 81 / 255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    
                    Label:
                        text: 'Duração da Viagem'

                    Label:
                        text: 'Intervalo de Repouso'
                        size_hint_x: .4
                
                BoxLayout:
                    size_hint_y: None
                    height: 17

                    canvas.before:
                        Color:  
                            rgba: (21 / 255, .15, 81 / 255, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    Label:
                        text: 'Saída'

                    Label:
                        text: 'P1'

                    Label:
                        text: 'P2'

                    Label:
                        text: 'P3'

                    Label:
                        text: 'Fiscal'

                    Label:
                        text: 'Chegada'

                    Label:
                        text: 'Atraso'

                    Label:
                        text: 'Início'

                    Label:
                        text: 'Término'

                    Label:
                        text: 'Total'

            StackLayout:
                id: travels
                spacing: 5

                BoxLayout:
                    size_hint_y: None
                    height: 30
                    spacing: 5

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 

                    TextInput:
                        multiline: False 


            BoxLayout:
                orientation: 'vertical'
                id: temp


        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'Nome da Empresa\n'
            
